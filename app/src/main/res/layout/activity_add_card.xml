<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.badknees.esssquad.AddCard">

    <LinearLayout
        android:id="@+id/dcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/boundary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:text="Debit Card"
                android:textColor="#fff"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:text="Enter your card number"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:maxLength="16"
                android:textSize="20sp"
                android:textColor="#000000"
                android:inputType="number"
                android:background="@drawable/boundaryw"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="#fff"
                    android:text="Valid up to"
                    android:textSize="12sp"/>
                <TextView
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#fff"
                    android:text="CVV code"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/mn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:gravity="center"
                    android:hint="MM"
                    android:maxLength="2"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:background="@drawable/boundaryw"/>
                <EditText
                    android:id="@+id/yr"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:gravity="center"
                    android:hint="YY"
                    android:maxLength="2"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:background="@drawable/boundaryw"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/cvv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:maxLength="3"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:background="@drawable/boundaryw"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="This card will be securely saved for a faster payment experience ."/>

    </LinearLayout>


    <Button
        android:layout_below="@+id/dcard"
        android:layout_gravity="end"
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Add"
        android:background="#66ff66"
        android:textColor="#000"/>

</RelativeLayout>
